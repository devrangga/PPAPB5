<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/registerTitle"
        android:fontFamily="@font/plusjakartasansextrabold"
        android:textColor="@color/slate"
        android:textSize="24dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Skuy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username"
        android:hint="Username"
        app:layout_constraintTop_toBottomOf="@id/registerTitle"
        android:fontFamily="@font/plusjakartasansmedium"
        android:textColor="@color/grey2"
        android:textSize="16dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grey"
        />

    <EditText
        android:id="@+id/Email"
        android:hint="Email"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:fontFamily="@font/plusjakartasansmedium"
        android:textColor="@color/grey2"
        android:textSize="16dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grey"
        />

    <EditText
        android:id="@+id/Phone"
        android:hint="Phone"
        app:layout_constraintTop_toBottomOf="@id/Email"
        android:fontFamily="@font/plusjakartasansmedium"
        android:textColor="@color/grey2"
        android:textSize="16dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grey"
        />

    <EditText
        android:id="@+id/Password"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/Phone"
        android:fontFamily="@font/plusjakartasansmedium"
        android:textColor="@color/grey2"
        android:textSize="16dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grey"
        />

    <CheckBox
        android:id="@+id/agreeCheckBox"
        app:layout_constraintTop_toBottomOf="@id/Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By checking the box you agree with the Terms  Conditions"
        android:fontFamily="@font/plusjakartasansmedium"
        android:textColor="@color/grey2"
        android:textSize="10dp"
        android:checked="false" />
    
    <Button
        android:id="@+id/Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/agreeCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="REGSITER"
        android:fontFamily="@font/plusjakartasansextrabold"
        android:backgroundTint="@color/slate"
        />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have an Account?"
            android:fontFamily="@font/plusjakartasansmedium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/plusjakartasansextrabold"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>